{
  "name": "pognali-17",
  "version": "17.0.0",
  "private": true,
  "description": "Личный проект «Погнали» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "9.5.x",
    "browser-sync": "2.26.x",
    "gulp": "4.0.x",
    "gulp-lintspaces": "^1.0.1",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-sass": "4.0.x",
    "gulp-sourcemaps": "2.6.x",
    "gulp-stylelint": "^9.0.0",
    "gulp-svgstore": "^7.0.1",
    "htmlacademy-stylelint-config": "0.0.1",
    "stylelint": "10.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp sprite css",
    "start": "gulp start"
  },
  "stylelint": {
    "extends": "htmlacademy-stylelint-config"
  },
  "imagemin": {
    "base": {
      "base": "source/img"
    },
    "jpg": {
      "max": 80,
      "progressive": true
    },
    "svgo": {
      "plugins": [
        {
          "removeViewBox": false
        },
        {
          "removeTitle": true
        },
        {
          "cleanupNumericValues": {
            "floatPrecision": 2
          }
        },
        {
          "convertPathData": {
            "floatPrecision": 2
          }
        },
        {
          "transformsWithOnePath": {
            "floatPrecision": 2
          }
        },
        {
          "convertTransform": {
            "floatPrecision": 2
          }
        },
        {
          "cleanupListOfValues": {
            "floatPrecision": 2
          }
        }
      ]
    }
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": "8.16"
  },
  "dependencies": {}
}
